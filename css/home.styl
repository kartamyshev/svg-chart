html,
body
  width 100%;
  height 100%;

body
  display flex
  animation body-animation 1s linear
  margin 0;
  padding 0;
  background-color: rgba(0, 0, 0, .24);
  background-size: 13px 13px, 29px 29px, 37px 37px, 53px 53px;
  background-image:
    linear-gradient(0deg, rgba(255,255,255,.07) 50%, transparent 50%),
    linear-gradient(0deg, transparent 50%, rgba(255,255,255,.1) 50%),
    linear-gradient(0deg, transparent 50%, rgba(255,255,255,.17) 50%),
    linear-gradient(0deg, transparent 50%, rgba(255,255,255,.19) 50%);
  font-family Helvetica, Arial, sans-serif;

svg
  animation svg-appearance 1.2s ease-in-out
  transform scale(1)
  perspective 500px
  box-shadow 0 0 15px 6px rgba(0, 0, 0, .15)
  overflow visible
  margin auto
  cursor: pointer
  transition all .3s linear
  &:hover
    transform scale(1.007)

path
  transform-origin 100% 100%
  transform scaleY(0)
  opacity 0
  animation path-appearance .7s ease-out forwards

for i in (1..35)
  path:nth-child({i})
    animation-delay (i / 13)s

@keyframes path-appearance
  from
    transform scaleY(0)
    opacity 0
  65%
    transform scaleY(1.04)
  to
    transform scaleY(1)
    opacity 1

@keyframes svg-appearance
  from
    transform scale(0)
    opacity: 0
  65%
    transform scale(1.12)
    opacity: 1
  to
    transform scale(1)
