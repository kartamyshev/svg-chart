points = 36
html,
body
  width 100%;
  height 100%;

body
  display flex
  animation body-animation 1s linear
  margin 0;
  padding 0;
  background-color: rgba(0, 0, 0, .24);
  font-family Helvetica, Arial, sans-serif;

svg
  animation svg-appearance 1.2s ease-in-out
  transform scale(1)
  perspective 500px
  box-shadow 0 0 15px 6px rgba(0, 0, 0, .15)
  overflow visible
  padding: 1px 3px
  background: rgba(255, 255, 255, .6)
  margin auto

path
  transform-origin 100% 100%
  transform scaleY(0)
  opacity 0
  animation path-appearance .7s ease-out forwards

for i in (1..points)
  path:nth-child({i})
    animation-delay (i / 22)s

@keyframes path-appearance
  from
    transform scaleY(0)
    opacity 0
  65%
    transform scaleY(1.04)
  to
    transform scaleY(1)
    opacity 1

@keyframes svg-appearance
  from
    transform scale(0)
    opacity: 0
  65%
    transform scale(1.12)
    opacity: 1
  to
    transform scale(1)
